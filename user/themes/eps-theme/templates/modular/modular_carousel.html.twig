{% import 'macros/cards.html.twig' as macro_card %}
<section class="container">

   <div class="owl-carousel owl-theme owl-loaded owl-drag " >
      {% for card in page.header.card_list %}
        {{macro_card.card(page,card.image, card.title, card.description, card.btn_list,  card.css_text_class)}}
  
      {% endfor %}
    </div>


</section>



  <script>
$(document).ready(function(){
            $('.owl-carousel').owlCarousel({
              loop: false,    
              dots: true,
              nav: true,
              center: false,
              margin: {{page.header.carousel_item_margin}},
              items: {{page.header.carousel_nb_items}},
              items: 1,
              stagePadding: 10,
              margin: 10,
navText : ['<i class="fa fa-angle-left" aria-hidden="true"></i>','<i class="fa fa-angle-right" aria-hidden="true"></i>'],
              {% if page.header.carousel_responsive_list %}
                responsive:{

                  {% for resp in page.header.carousel_responsive_list %}
                    {{resp.breakpoint}}:{
                      items: {{resp.items}},
                      margin: {{resp.margin}},
                      loop: {{resp.loop ? 'true':'false' }},
                      nav: {{resp.nav ? 'true':'false' }},
                      dots: {{resp.dots ? 'true':'false' }},
                      
                    },

                  {% endfor %}
                }
              {% endif %}
              
            });
   });


</script>













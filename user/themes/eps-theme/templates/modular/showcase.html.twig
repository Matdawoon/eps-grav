{% set grid_size = theme_var('grid-size') %}
{% set image = page.media.images|first %}


    <section class="container-showcase custom-container {{page.header.showcase_bg_radius}} " style=" background-image: url('{{page.media[page.header.showcase_bg_img].url}}');">
        <div class="container-showcase__row container {{ grid_size }} {{ page.header.image_align|default('align-right') }}">
            {% if page.header.main_img %}
            <div class="container-showcase__row__desc ">
                {% if page.header.secondary_img %}
                    {{ page.media[page.header.secondary_img].html("","","secondary-image")|raw }}
                {% endif %}
                <h1> {{page.header.showcase_title}}</h1>
                <p> {{page.header.showcase_description}}</p>
            </div>
            <div class="primary-image">
                <img src="{{ page.media[page.header.main_img].cropResize(897, 680).url }}" class="img-responsive img-centered">
            </div>
            {% else %}
            <div class="column col-12">
            <img src="{{ page.media[page.header.main_img].cropResize(300, 300).url }}" class="img-responsive img-centered">
                <h1> {{page.header.showcase_title}}  </h1>
                <p> {{page.header.showcase_description}}</p>
            </div>
            {% endif %}
        </div>
    </section>
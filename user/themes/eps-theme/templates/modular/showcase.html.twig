{% import 'macros/button.html.twig' as button %}
{% set image = page.media.images|first %}


    <div class="container container-showcase">
        <div class="container-showcase__row container {{ page.header.image_align|default('align-right') }}">
            {% if page.header.main_img %}
            <div class="container-showcase__row__desc ">
                {% if page.header.secondary_img %}
                    {{ page.media[page.header.secondary_img].html("","","secondary-image")|raw }}
                {% endif %}
                {% include 'partials/general-title-description.html.twig' with {obj: page.header} %}
                {{button.macro_button(page.header.btn_list)}}
            </div>
            <div class="primary-image">
                <img src="{{ page.media[page.header.main_img].cropResize(897, 680).url }}" class="img-responsive showcase_desktop_view">
                <img src="{{ page.media[page.header.mobile_img].cropResize(897, 680).url }}" class="img-responsive showcase_mobile_view">
            </div>
            {% else %}
            <div class="text-center">

                {% include 'partials/general-title-description.html.twig' with {obj: page.header} %}
                {{button.macro_button(page.header.btn_list)}}
            </div>
            {% endif %}
        </div>
    </div>
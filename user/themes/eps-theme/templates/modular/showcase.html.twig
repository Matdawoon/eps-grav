{% set grid_size = theme_var('grid-size') %}
{% set image = page.media.images|first %}

<section class="section modular-text {{ page.header.class}} style="background-image: url({{page.media[page.header.showcase_bg_img].url}})">
    <section class="container {{ grid_size }}">
        <div class="columns {{ page.header.image_align|default('align-right') }}">
            {% if page.header.main_img %}
            <div class="column col-6 col-md-12">
                {% if page.header.secondary_img %}
                    {{ page.media[page.header.secondary_img].resize(400, 200).html()|raw }}
                {% endif %}
                <h1> {{page.header.showcase_title}}</h1>
                <p> {{page.header.showcase_description}}</p>
            </div>
            <div class="column col-6 col-md-12">
                <img src="{{ page.media[page.header.main_img].url }}" class="img-responsive img-centered">
            </div>
            {% else %}
            <div class="column col-12">
            <img src="{{ page.media[page.header.main_img].cropResize(300, 300).url }}" class="img-responsive img-centered">
                <h1> {{page.header.showcase_title}}  </h1>
                <p> {{page.header.showcase_description}}</p>
            </div>
            {% endif %}
        </div>
    </section>
</section>

{% extends 'partials/base.html.twig' %}



{% block javascripts %}
    {% if show_onpage_menu %}
        {% do assets.add('theme://js/singlepagenav.min.js') %}
    {% endif %}
    {% do assets.addJs('theme://js/owl.carousel.js') %}
    {% do assets.addJs('theme://js/smooth-scroll.min.js') %}


 
    {{ parent() }}
{% endblock %}



{% block bottom %}
    {{ parent() }}
    {% if show_onpage_menu %}
        <script>
        // singlePageNav initialization & configuration
        $('ul.navigation').singlePageNav({
            offset: $('#header').outerHeight(),
            filter: ':not(.external)',
            updateHash: true,
            currentClass: 'active'
        });
        </script>
    {% endif %}
{% endblock %}


{% block hero %}
    {% for module in page.collection() if module.template == 'modular/hero' %}
        <div id="{{ module.menu|hyphenize }}"></div>
        {{ module.content|raw }}
    {% endfor %}
{% endblock %}

{% block body %}

    {% for module in page.collection() %}

        <div class ="container-fluid {% if module.header.showcase_curvature["curvature_top"] %} top-radius-bg {% endif %}" style="background-color:{{module.header.showcase_bg_color}}; height:{{module.header.showcase_curvature_height}};" ></div>
            <section class="custom-container container-fluid {{module.header.showcase_bg_radius}}" style=" background-image: url('{{module.media[module.header.showcase_bg_img].url}}'); background-color:{{module.header.showcase_bg_color}};">
                {{ module.content|raw }}
            </section>
        <div class ="container-fluid {% if module.header.showcase_curvature["curvature_bottom"] %} bottom-radius-bg {% endif %}"  style="background-color:{{module.header.showcase_bg_color}}; height: {{module.header.showcase_curvature_height}};" ></div>
    {% endfor %}
{% endblock %}


